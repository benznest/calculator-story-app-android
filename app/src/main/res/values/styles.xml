<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="buttonCalculator">
        <item name="android:background">@drawable/selector_btn_3d_asphalt</item>
        <item name="android:textSize">26sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="buttonScientificCalculator">
        <item name="android:background">@drawable/selector_btn_3d_asphalt</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="buttonProgrammerCalculator">
        <item name="android:background">@drawable/selector_btn_3d_default</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="buttonDateBetweenCalculation">
        <item name="android:background">@drawable/selector_btn_3d_green</item>
        <item name="android:textSize">26sp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="buttonSmall">
        <item name="android:background">@drawable/selector_btn_3d_default</item>
        <item name="android:textSize">26sp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="buttonWidget">
        <item name="android:background">@drawable/selector_btn_3d_asphalt</item>
        <item name="android:textSize">26sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="buttonNumber">
        <item name="android:background">@drawable/selector_btn_3d_green</item>
        <item name="android:textSize">26sp</item>
        <item name="android:minHeight">80dp</item>
    </style>

    <style name="buttonNumberSciCalculator">
        <item name="android:background">@drawable/selector_btn_3d_blue</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorWetAsphalt</item>
    </style>


</resources>
