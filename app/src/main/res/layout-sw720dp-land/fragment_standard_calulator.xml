<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_history_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ListView
            android:id="@+id/listView_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundPrimary"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_data"/>
    </FrameLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="3"
                  android:background="@color/colorPrimary"
                  android:orientation="vertical"
                  app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@color/colorBackgroundPrimary"
            android:minHeight="300dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="12dp"
                        android:padding="8dp"
                        android:text="@string/vertical_ellipsis"
                        android:textColor="@color/colorWetAsphalt"
                        android:textSize="32sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/img_toggle_history"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_list"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:text="sin(30)"
                        android:textColor="@color/colorSilver"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:gravity="right|center_vertical"
                        android:hint="0"
                        android:maxLines="3"
                        android:scrollbars="vertical"
                        android:textSize="46sp"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="bottom"
                android:background="@color/colorWetAsphalt"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_rectangle_rounded"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/num7"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="7"/>

                    <Button
                        android:id="@+id/num8"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="8"/>

                    <Button
                        android:id="@+id/num9"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="9"/>

                    <Button
                        android:id="@+id/plus"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="+"/>

                    <Button
                        android:id="@+id/divide"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="@string/divide"/>

                    <Button
                        android:id="@+id/backSpace"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="@string/backspace"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/num4"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="4"/>

                    <Button
                        android:id="@+id/num5"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="5"/>

                    <Button
                        android:id="@+id/num6"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="6"/>

                    <Button
                        android:id="@+id/minus"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="-"/>

                    <Button
                        android:id="@+id/multiply"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="@string/multiply"/>

                    <Button
                        android:id="@+id/clear"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="@string/clear"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/num1"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="1"/>

                    <Button
                        android:id="@+id/num2"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="2"/>

                    <Button
                        android:id="@+id/num3"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="3"/>

                    <Button
                        android:id="@+id/openBracket"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"


                        android:text="@string/openBracket"/>

                    <Button
                        android:id="@+id/closeBracket"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="@string/closeBracket"/>

                    <Button
                        android:id="@+id/sqrt"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"


                        android:text="@string/sqrt"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/posneg"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="@string/posneg"/>

                    <Button
                        android:id="@+id/num0"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="0"/>

                    <Button
                        android:id="@+id/dot"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="."/>

                    <Button
                        android:id="@+id/square"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:text="@string/square"/>

                    <Button
                        android:id="@+id/equal"
                        style="@style/buttonCalculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="2"

                        android:text="="/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>